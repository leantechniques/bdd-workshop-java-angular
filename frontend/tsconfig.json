{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "app/*": ["src/app/*"],
      "@testing/*": ["src/testing/*"]
    },
    "target": "ES2021",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest"],
    "lib": ["es2021", "dom"],
    "useDefineForClassFields": false
  },
  "include": ["src/**/*"]
}
